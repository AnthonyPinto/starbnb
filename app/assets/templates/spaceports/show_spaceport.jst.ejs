<div class="spaceport-box">
	<div class="spaceport-image-wrapper">
		<% if (spaceport.photos().at(0)){ %>
		<img 
			src="<%= spaceport.photos().at(0).escape('url') %>"
			class="spaceport-img">
		<% } %>
	</div>
	<div class="spaceport-panel-wrapper" >
		<div class="row spaceport-panel-row">
			
			<div class="col-xs-2 col-xs-offset-1">
				<div class="row">
					<div class="col-xs-12">
						<div 
						class="spaceport-user-img-frame"
						onclick="location.href=' <%= "#/users/" + spaceport.user().escape('id') %>';">
					  	<img src="<%= spaceport.userPhoto().escape('url') %>" class="brief-user-img">
						</div>
					</div>
					<div class="col-xs-12">
						<a>
							<%= spaceport.user().escape("username") %>
						</a>
					</div>
				</div>
			</div>
			
			<div class="col-xs-4">
				<div class="row">
					<div class="col-xs-12">
						<h4><%= spaceport.escape("name") %></h4>
						<h5><%= spaceport.escape("address") %></h5>
					</div>
					<div class="col-xs-12">
						<div class="row">
							<div class="col-xs-3">
								<p>
									<h3><span class="glyphicon glyphicon-flag"></span></h3>
									<%= spaceport.styleStr() %>
								</p>
							</div>
							<div class="col-xs-3">
								<p>
									<h3><span class="glyphicon glyphicon-user"></span></h3>
									<%= spaceport.get("staff") + " Staff" %>
								</p>
							</div>
							<div class="col-xs-3">
								<p>
									<h3><span class="glyphicon glyphicon-arrow-up"></span></h3>
									<%= spaceport.get("pads") + " Launchpads" %>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="col-xs-4">
				<div class="row">
					<div class="col-xs-12">
						<div class="row">
							<div class="col-xs-9">
								<div class="row">
									<div class="col-xs-6">
										<p>Check In</p>
									</div>
									<div class="col-xs-6">
										<p>Check Out</p>
									</div>
									<div class="col-xs-6">
				            <input type='text'
				              name="space[checkIn]"
				              class="form-control datetimepicker"
				              placeholder="mm/dd/yyyy" 
				              id='datetimepickerStart'>
									</div>
									<div class="col-xs-6">
				            <input 
				              name="space[checkOut]"
				              type='text' 
				              class="form-control datetimepicker"
				              placeholder="mm/dd/yyyy"  
				              id='datetimepickerEnd'>
									</div>
								</div>
							</div>
							<div class="col-xs-3">
								<p>Staff</p>
							</div>
						</div>
					</div>
					<div class="col-xs-12">
						<button
							class="book-button">
							Book Now
						</button>
					</div>
				</div>
			</div>
			
		</div>
	</div>
</div>